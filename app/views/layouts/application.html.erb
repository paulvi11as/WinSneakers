<!DOCTYPE html>
<html>
  <head>
    <title>WinSneakers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">ComicVine</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <%= link_to "Home", home_index_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Products", products_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Categories", categories_path, class: "nav-link" %>
            </li>
            <%
=begin%>
            <li class="nav-item">
              <%= link_to "Cart", cart_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'About Us', about_path, class: "nav-link" %>
            </li>
          </ul>
          <%= form_with url: search_path, method: :get, class: "d-flex" do |form| %>
            <%= form.text_field :query, placeholder: "Search...", class: "form-control me-2" %>
            <%= form.submit "Search", class: "btn btn-outline-light" %>
          <% end %>
          <%
=end%>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      <%= yield %>
    </div>

    <footer class="text-center bg-dark text-light py-3">
      <p>&copy; <%= Time.current.year %> WinSneakers. All rights reserved.</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>