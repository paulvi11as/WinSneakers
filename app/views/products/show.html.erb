<div class="container mt-4">
  <div class="row">
    <!-- Product Image -->
    <div class="col-md-6">
      <% if @product.product_images.any? %>
        <%= image_tag @product.product_images.first.image_url, class: "img-fluid", alt: @product.name %>
      <% else %>
        <%= image_tag "https://via.placeholder.com/450x450.png?text=No+Image", class: "img-fluid", alt: @product.name %>
      <% end %>
    </div>

    <!-- Product Details -->
    <div class="col-md-6">
      <h1 class="mb-4"><%= @product.name %></h1>
      <p class="text-muted"><strong>Category:</strong> <%= @product.category&.name || "Unknown" %></p>
      <p><strong>Description:</strong> <%= @product.description.presence || "No description available." %></p>
      <p><strong>Price:</strong> $<%= number_with_precision(@product.price, precision: 2) %></p>
      <p><strong>Stock:</strong> <%= @product.stock_quantity > 0 ? @product.stock_quantity : "Out of stock" %></p>
      <%= link_to "Back to All Products", products_path, class: "btn btn-secondary mt-3" %>
    </div>
  </div>
</div>
