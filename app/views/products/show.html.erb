<div class="container mt-4">
  <!-- Product Image -->
  <div class="row mb-4">
    <div class="col-md-6">
      <% if @product.product_images.any? %>
        <%= image_tag @product.product_images.first.image_url, class: "img-fluid rounded", alt: @product.name %>
      <% else %>
        <%= image_tag "https://via.placeholder.com/500x500.png?text=No+Image", class: "img-fluid rounded", alt: "No Image Available" %>
      <% end %>
    </div>
    <div class="col-md-6">
      <!-- Product Details -->
      <h1><%= @product.name %></h1>
      <p class="text-muted"><strong>Category:</strong> <%= @product.category.name if @product.category.present? %></p>
      <p><strong>Description:</strong> <%= @product.description %></p>
      <p><strong>Price:</strong> $<%= @product.price %></p>
    </div>
  </div>

  <!-- Sizes Section -->
  <h3>Available Sizes</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Size</th>
        <th>Stock</th>
      </tr>
    </thead>
    <tbody>
      <% @product.available_sizes.each do |size_info| %>
        <tr>
          <td><%= size_info[:size] %></td>
          <td>
            <% if size_info[:stock] == 0 %>
              <span class="text-danger">Sold Out</span>
            <% else %>
              <%= size_info[:stock] %> in stock
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>